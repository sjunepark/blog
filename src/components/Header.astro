---
import ThemeIcon from "@components/ThemeIcon.svelte";
import HeaderLink from "@components/defaultLayout/HeaderLink.svelte";
import Button from "@components/ui/button/button.svelte";

const { pathname } = Astro.url;
---

<header
  class="sticky top-0 z-50 w-full flex-none bg-gradient-to-b from-background from-65% via-background/30 via-90% px-4 pb-12 pt-6 sm:px-8 md:px-12 md:pb-16"
>
  <div
    class="mx-auto flex max-w-screen-lg items-center justify-end gap-4 sm:justify-center"
  >
    <div class="relative flex-1">
      <div class="relative h-min w-min">
        <Button variant="icon" size="icon">
          <a href="/" class="absolute h-full w-full"></a>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-5 w-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
            ></path>
          </svg>
        </Button>
      </div>
    </div>
    <!--MobileNavigation-->
    <!--todo-->

    <!--DesktopNavigation-->
    <nav class="">
      <ul
        class="flex rounded-full px-3 font-medium shadow-md shadow-border outline outline-1 outline-border"
      >
        <li>
          <HeaderLink href="/about" {pathname} client:load>About</HeaderLink>
        </li>
        <li>
          <HeaderLink href="/post" {pathname} client:load>Posts</HeaderLink>
        </li>
      </ul>
    </nav>

    <div class="flex flex-1 justify-end">
      <ThemeIcon client:load />
    </div>
  </div>
</header>
