{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@db/*": ["db/*"],
      "@pages/*": ["src/pages/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "dist"]
}
